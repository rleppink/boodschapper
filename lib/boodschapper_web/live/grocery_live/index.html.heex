<.header>
ðŸ›’ Boodschappen
</.header>

<div id="groceries" phx-update="stream">
  <div :for={{dom_id, grocery} <- @streams.groceries} id={dom_id}>
    <div phx-click={JS.navigate(~p"/#{grocery}")} class="py-2 flex flex-row hover:cursor-pointer hover:bg-zinc-50">
      <span><%= grocery.name %></span>
      <div>
        <.link
          phx-click={JS.push("delete", value: %{id: grocery.id}) |> hide("##{grocery.id}")}
          data-confirm="Are you sure?"
          >
          <.icon name="hero-trash" class="h-5 w-5" />
        </.link>
        <.link patch={~p"/#{grocery}/edit"}>
          <.icon name="hero-pencil" class="h-5 w-5" />
        </.link>
        <.link phx-click="check">
          <.icon name="hero-check" class="h-5 w-5" />
        </.link>
      </div>
    </div>
  </div>
</div>

<.modal :if={@live_action in [:new, :edit]} id="grocery-modal" show on_cancel={JS.patch(~p"/")}>
  <.live_component
    module={BoodschapperWeb.GroceryLive.FormComponent}
    id={@grocery.id || :new}
    title={@page_title}
    action={@live_action}
    grocery={@grocery}
    patch={~p"/"}
  />
</.modal>

